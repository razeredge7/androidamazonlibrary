<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFA384"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/buttonfavorite"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:background="#00000000"
                android:src="@drawable/ic_favoritebeforeclick" />

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/buttonfavorite"
                android:text="Judul"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/penulis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/buttonfavorite"
                android:text="Penulis"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />



            <TextView
                android:id="@+id/penerbit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/penulis"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/buttonfavorite"
                android:text="Publisher"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/penerbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/penerbit1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/buttonfavorite"
                android:text="Penerbit"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                android:id="@+id/detailsbuton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="DETAILS"
                android:textColor="#0C6980"
                android:background="#00000000"
                android:layout_below="@id/penerbit"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/buttonfavorite"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>